@model Pharmacy_Management_System.Models.PMSSeller

@{
    ViewBag.Title = "LogInAsSeller";
}
<!DOCTYPE html>
<html lang="en">
<head>

    <title>Login Page</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-image: url('../../images/pexels-pixabay-139398.jpg');
            background-size: cover;
            background-repeat:no-repeat;
            
        }

        .login-container {
            max-width: 400px;
            margin: 100px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="login-container">
            @ViewBag.Notification
            <h2 class="text-center mb-4">Login</h2>
            @using (Html.BeginForm("LogInAsSeller", "Home", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.HiddenFor(model => model.SelId, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.LabelFor(model => model.SelEmail, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SelEmail, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SelEmail, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.SelPwd, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SelPwd, new { htmlAttributes = new { @class = "form-control" ,@type="password" } })
                        @Html.ValidationMessageFor(model => model.SelPwd, "", new { @class = "text-danger" })
                    </div>
                </div>
                <input type="submit" value="LogIn" class="btn btn-primary btn-block" />
            }
        </div>
    </div>
</body>
</html>


